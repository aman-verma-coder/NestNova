<% layout("/layout/boilerplate") -%>

    <body>
        <div class="refunds-section">
            <!-- Section Header -->
            <h1 class="refunds-header">Refunds & Cancellations</h1>

            <!-- Refund Policy -->
            <div class="refund-policy">
                <h2>Refund Policy</h2>
                <p>If you need to cancel your booking, please review our refund guidelines:</p>
                <ul>
                    <li>50% refunds for cancellations made 48 hours before the check-in date.</li>
                    <li>Bookings canceled within 48 hours will not receive a refund.</li>
                    <li>If the host cancels the booking, a full refund will be issued to you.</li>
                </ul>
            </div>

            <!-- Cancellation Policy -->
            <div class="cancellation-policy">
                <h2>Cancellation Policy</h2>
                <p>To cancel your reservation, follow the steps in your account. Here are the cancellation terms:</p>
                <ul>
                    <li>Cancellations before 12 PM on the check-in date receive a full refund.</li>
                    <li>Cancellations after 12 PM on the check-in date will result in the first night being charged.
                    </li>
                    <li>Refunds will be processed to your original payment method within 7 business days.</li>
                </ul>
            </div>
        </div>

    </body>