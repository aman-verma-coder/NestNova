    <div class="container my-5">
        <section id="sitemap-section">
            <div class="sitemap-container">
                <h1 class="sitemap-title text-center mb-5">Sitemap</h1>

                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-home me-2"></i>Main Pages</h3>
                                <ul class="list-unstyled sitemap-list">
                                    <li><a href="/"><i class="fas fa-angle-right me-2"></i>Home</a></li>
                                    <li><a href="/listings"><i class="fas fa-angle-right me-2"></i>All Listings</a></li>
                                    <li><a href="/listings/about"><i class="fas fa-angle-right me-2"></i>About Us</a>
                                    </li>
                                    <li><a href="/contact"><i class="fas fa-angle-right me-2"></i>Contact Us</a></li>
                                    <li><a href="/blog"><i class="fas fa-angle-right me-2"></i>Blog</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-user me-2"></i>User Account</h3>
                                <ul class="list-unstyled sitemap-list">
                                    <li><a href="/login"><i class="fas fa-angle-right me-2"></i>Login</a></li>
                                    <li><a href="/signup"><i class="fas fa-angle-right me-2"></i>Sign Up</a></li>
                                    <li><a href="/profile"><i class="fas fa-angle-right me-2"></i>User Profile</a></li>
                                    <li><a href="/bookings"><i class="fas fa-angle-right me-2"></i>My Bookings</a></li>
                                    <li><a href="/wishlists"><i class="fas fa-angle-right me-2"></i>My Wishlists</a>
                                    </li>
                                    <li><a href="/messages"><i class="fas fa-angle-right me-2"></i>Messages</a></li>
                                    <li><a href="/saved"><i class="fas fa-angle-right me-2"></i>Saved Items</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-file-alt me-2"></i>Legal & Info</h3>
                                <ul class="list-unstyled sitemap-list">
                                    <li><a href="/privacy"><i class="fas fa-angle-right me-2"></i>Privacy Policy</a>
                                    </li>
                                    <li><a href="/tnc"><i class="fas fa-angle-right me-2"></i>Terms & Conditions</a>
                                    </li>
                                    <li><a href="/rnc"><i class="fas fa-angle-right me-2"></i>Refunds &
                                            Cancellations</a></li>
                                    <li><a href="/sitemap"><i class="fas fa-angle-right me-2"></i>Sitemap</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-list me-2"></i>Listings</h3>
                                <ul class="list-unstyled sitemap-list">
                                    <li><a href="/listings/new"><i class="fas fa-angle-right me-2"></i>Create New
                                            Listing</a></li>
                                    <li><a href="/listings/search"><i class="fas fa-angle-right me-2"></i>Search
                                            Listings</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-bell me-2"></i>Notifications</h3>
                                <ul class="list-unstyled sitemap-list">
                                    <li><a href="/notifications"><i class="fas fa-angle-right me-2"></i>View
                                            Notifications</a></li>
                                    <li><a href="/users/update-notifications"><i
                                                class="fas fa-angle-right me-2"></i>Notification Settings</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <style>
        .sitemap-title {
            color: #fe424d;
            font-weight: 700;
        }

        .sitemap-list li {
            margin-bottom: 10px;
        }

        .sitemap-list a {
            color: #333;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .sitemap-list a:hover {
            color: #fe424d;
            text-decoration: none;
            padding-left: 5px;
        }

        .card {
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            color: #15B5B0;
            font-weight: 600;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }
    </style>