                <!-- Newsletter Signup -->
                <div class="newsletter-signup mb-5">
                    <div class="card bg-light">
                        <div class="card-body p-4 text-center">
                            <h3 class="mb-3">Subscribe to Our Newsletter</h3>
                            <p class="mb-4">Stay updated with our latest travel tips, destination guides, and hosting
                                advice.</p>
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <form class="d-flex">
                                        <input type="email" class="form-control me-2" placeholder="Your email address">
                                        <button type="submit" class="btn btn-primary">Subscribe</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <style>
        .blog-title {
            color: #fe424d;
            font-weight: 700;
        }

        .section-title {
            color: #15B5B0;
            font-weight: 600;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: #fe424d;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .category-card {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .category-card:hover {
            text-decoration: none;
            color: inherit;
        }

        .category-card .card {
            transition: all 0.3s ease;
        }

        .category-card:hover .card {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .btn-link {
            color: #fe424d;
            text-decoration: none;
        }

        .btn-link:hover {
            color: #15B5B0;
            text-decoration: none;
        }

        .featured-post .card {
            overflow: hidden;
        }

        @media (max-width: 767.98px) {
            .featured-post .card-body {
                padding: 1.5rem;
            }
        }
    </style>