<% layout("/layout/boilerplate") -%>

    <body>
        <div class="tx-filter">
            <div id="filters">
                <!-- <div class="filter-width"> -->
                <form action="/listings" method="get">
                    <div class="filter-data">
                        <label for="Trending">
                            <i class="fa-solid fa-fire"></i>
                            <p name="Trending">Trending</p>
                        </label>
                        <input type="radio" id="Trending" name="Trending" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Rooms">
                            <i class="fa-solid fa-bed"></i>
                            <p>Rooms</p>
                        </label>
                        <input type="radio" id="Rooms" name="Rooms" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Bed & Breakfast">
                            <i class="fa-solid fa-mug-saucer"></i>
                            <p>Bed & Breakfast</p>
                        </label>
                        <input type="radio" id="Bed & Breakfast" name="Bed & Breakfast" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Beaches">
                            <i class="fa-solid fa-umbrella-beach"></i>
                            <p>Beaches</p>
                        </label>
                        <input type="radio" id="Beaches" name="Beaches" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Pools">
                            <i class="fa-solid fa-person-swimming"></i>
                            <p>Pools</p>
                        </label>
                        <input type="radio" id="Pools" name="Pools" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Iconic Cities">
                            <i class="fa-solid fa-city"></i>
                            <p>Iconic Cities</p>
                        </label>
                        <input type="radio" id="Iconic Cities" name="Iconic Cities" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Mountains">
                            <i class="fa-solid fa-mountain-sun"></i>
                            <p>Mountains</p>
                        </label>
                        <input type="radio" id="Mountains" name="Mountains" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Castles">
                            <i class="fa-brands fa-fort-awesome"></i>
                            <p>Castles</p>
                        </label>
                        <input type="radio" id="Castles" name="Castles" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Camping">
                            <i class="fa-solid fa-campground"></i>
                            <p>Camping</p>
                        </label>
                        <input type="radio" id="Camping" name="Camping" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Farms">
                            <i class="fa-solid fa-cow"></i>
                            <p>Farms</p>
                        </label>
                        <input type="radio" id="Farms" name="Farms" style="display: none;" />
                    </div>
                    <div class="filter-data">
                        <label for="Arctic">
                            <i class="fa-regular fa-snowflake"></i>
                            <p>Arctic</p>
                        </label>
                        <input type="radio" id="Arctic" name="Arctic" style="display: none;" />
                    </div>
                    <button id="categorysubmitbtn" style="display: none;">Submit</button>
                </form>
                <!-- </div> -->
            </div>
            <div class="filter-button-container">
                <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse"
                    data-bs-target="#filterPanel" aria-expanded="false" aria-controls="filterPanel">
                    <i class="fa-solid fa-sliders"></i> Filters
                </button>
            </div>
            <div class="tax-toggle">
                <div class="custom-toggle">
                    <input type="checkbox" id="taxToggle" class="custom-toggle-checkbox">
                    <label for="taxToggle" class="custom-toggle-label">
                        <span class="toggle-track">
                            <span class="toggle-indicator"></span>
                        </span>
                        <span class="toggle-text">Show Prices With Tax</span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Collapsible Filter Panel -->
        <div class="collapse" id="filterPanel">
            <div class="card card-body filter-panel mb-4">
                <form id="detailedFilterForm" action="/listings" method="get">
                    <div class="row">
                        <!-- Price Range Filter -->
                        <div class="col-md-4 mb-3">
                            <h5>Price Range</h5>
                            <div class="price-range-container">
                                <div class="mb-2">
                                    <label for="minPrice" class="form-label">Min Price (₹)</label>
                                    <input type="number" class="form-control" id="minPrice" name="minPrice" min="0"
                                        placeholder="Min Price">
                                </div>
                                <div class="mb-2">
                                    <label for="maxPrice" class="form-label">Max Price (₹)</label>
                                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" min="0"
                                        placeholder="Max Price">
                                </div>
                            </div>
                        </div>

                        <!-- Property Type Filter -->
                        <div class="col-md-4 mb-3">
                            <h5>Property Type</h5>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Apartment" id="apartment"
                                    name="propertyType">
                                <label class="form-check-label" for="apartment">Apartment</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="House" id="house"
                                    name="propertyType">
                                <label class="form-check-label" for="house">House</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Villa" id="villa"
                                    name="propertyType">
                                <label class="form-check-label" for="villa">Villa</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Cottage" id="cottage"
                                    name="propertyType">
                                <label class="form-check-label" for="cottage">Cottage</label>
                            </div>
                        </div>

                        <!-- Amenities Filter -->
                        <div class="col-md-4 mb-3">
                            <h5>Amenities</h5>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Wifi" id="wifi" name="amenities">
                                <label class="form-check-label" for="wifi">Wifi</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Kitchen" id="kitchen"
                                    name="amenities">
                                <label class="form-check-label" for="kitchen">Kitchen</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="AC" id="ac" name="amenities">
                                <label class="form-check-label" for="ac">Air Conditioning</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Parking" id="parking"
                                    name="amenities">
                                <label class="form-check-label" for="parking">Free Parking</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Pool" id="pool" name="amenities">
                                <label class="form-check-label" for="pool">Swimming Pool</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="reset" class="btn btn-outline-secondary me-2">Reset</button>
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                    </div>
                </form>
            </div>
        </div>
        <%= success %>
            <% if(typeof searchQuery !=="undefined" ) { %>
                <h2 class="show-page mt-4 mb-4">Search results for "<%= searchQuery %>"</h2>
                <% if(allListings.length===0) { %>
                    <div class="alert alert-info">No listings found matching your search. <a href="/listings">View all
                            listings</a></div>
                    <% } %>
                        <% } else { %>
                            <h2 class="show-page mt-4 mb-4">All listings</h2>
                            <% } %>
                                <!-- <form method="get" action="/listings/new">
            <button>Add New Listing</button>
        </form><br> -->
                                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 show-page">
                                    <% for (const listing of allListings) { %>
                                        <a href="/listings/<%= listing._id %>/show" class="listing-link"
                                            style="width: 20rem;">
                                            <div class="card col" style="width: 100%;">
                                                <div class="position-relative">
                                                    <img src="<%= listing.image.url %>" class="card-img-top" alt="..."
                                                        style="height: 20rem;">
                                                    <% if(currentUser) { %>
                                                        <form action="/wishlists/quick-add/<%= listing._id %>"
                                                            method="POST" class="position-absolute"
                                                            style="top: 10px; right: 10px;">
                                                            <button type="submit"
                                                                class="btn btn-sm btn-light rounded-circle p-2"
                                                                title="Save to Wishlist">
                                                                <i class="fas fa-heart text-danger"></i>
                                                            </button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                                <div class="card-img-overlay"></div>
                                                <div class="card-body">
                                                    <p class="card-text">
                                                        <b>
                                                            <%= listing.title %>
                                                        </b><br>
                                                        ₹<%= listing.price.toLocaleString("en-IN") %>/night
                                                            <i class="taxInfo"> &nbsp; &nbsp; +18% GST </i>
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                        <% } %>
                                </div>
                                <!-- <% for (const listing of allListings) { %>
            <p>Title:
                <a href="/listings/<%= listing._id %>/show">
                    <%= listing.title %>
                </a>
            </p>
            <% } %> -->
                                <!-- <script src="Js/listingfunctionality.js"></script> -->
                                <script src="Js/listingfunctionality.js"></script>
    </body>