<% layout("/layout/boilerplate") -%>

    <body>
        <div id="filters">
            <form action="/listings" method="get">
                <div class="filter-data">
                    <label for="Trending">
                        <i class="fa-solid fa-fire"></i>
                        <p name="Trending">Trending</p>
                    </label>
                    <input type="radio" id="Trending" name="Trending" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Rooms">
                        <i class="fa-solid fa-bed"></i>
                        <p>Rooms</p>
                    </label>
                    <input type="radio" id="Rooms" name="Rooms" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Bed & Breakfast">
                        <i class="fa-solid fa-mug-saucer"></i>
                        <p>Bed & Breakfast</p>
                    </label>
                    <input type="radio" id="Bed & Breakfast" name="Bed & Breakfast" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Beaches">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <p>Beaches</p>
                    </label>
                    <input type="radio" id="Beaches" name="Beaches" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Pools">
                        <i class="fa-solid fa-person-swimming"></i>
                        <p>Pools</p>
                    </label>
                    <input type="radio" id="Pools" name="Pools" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Iconic Cities">
                        <i class="fa-solid fa-city"></i>
                        <p>Iconic Cities</p>
                    </label>
                    <input type="radio" id="Iconic Cities" name="Iconic Cities" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Mountains">
                        <i class="fa-solid fa-mountain-sun"></i>
                        <p>Mountains</p>
                    </label>
                    <input type="radio" id="Mountains" name="Mountains" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Castles">
                        <i class="fa-brands fa-fort-awesome"></i>
                        <p>Castles</p>
                    </label>
                    <input type="radio" id="Castles" name="Castles" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Camping">
                        <i class="fa-solid fa-campground"></i>
                        <p>Camping</p>
                    </label>
                    <input type="radio" id="Camping" name="Camping" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Farms">
                        <i class="fa-solid fa-cow"></i>
                        <p>Farms</p>
                    </label>
                    <input type="radio" id="Farms" name="Farms" style="display: none;" />
                </div>
                <div class="filter-data">
                    <label for="Arctic">
                        <i class="fa-regular fa-snowflake"></i>
                        <p>Arctic</p>
                    </label>
                    <input type="radio" id="Arctic" name="Arctic" style="display: none;" />
                </div>
                <button id="categorysubmitbtn" style="display: none;">Submit</button>
                <div class="tax-toggle">
                    <div class="form-check form-switch form-check-reverse">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                        <label class="form-check-label" for="flexSwitchCheckReverse">Display Total Before Taxes</label>
                    </div>
                </div>
            </form>
        </div>
        <%= success %>
            <h2 class="show-page">All listings</h2>
            <!-- <form method="get" action="/listings/new">
            <button>Add New Listing</button>
        </form><br> -->
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 show-page">
                <% for (const listing of allListings) { %>
                    <a href="/listings/<%= listing._id %>/show" class="listing-link" style="width: 20rem;">
                        <div class="card col" style="width: 100%;">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listing.title %>
                                    </b><br>
                                    â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
                                        <i class="taxInfo"> &nbsp; &nbsp; +18% GST </i>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
            <!-- <% for (const listing of allListings) { %>
            <p>Title:
                <a href="/listings/<%= listing._id %>/show">
                    <%= listing.title %>
                </a>
            </p>
            <% } %> -->
            <!-- <script src="Js/listingfunctionality.js"></script> -->
            <script src="Js/listingfunctionality.js"></script>
    </body>